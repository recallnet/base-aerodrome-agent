# ===========================================
# Aerodrome Trading Agent Configuration
# ===========================================

# -----------------------------
# REQUIRED
# -----------------------------

# PostgreSQL database connection string
# Example: postgresql://user:password@localhost:5432/aerodrome_agent
DATABASE_URL=

# Anthropic API key (required if EIGENAI_ENABLED=false)
# Get one at: https://console.anthropic.com/
# NOTE: Not required if using EigenAI as the inference provider
ANTHROPIC_API_KEY=

# -----------------------------
# OPTIONAL - EigenAI Verification
# -----------------------------

# Enable EigenAI as the inference provider (default: false)
# When true, agent uses dTERMinal API instead of Anthropic
# When false, agent uses Anthropic Claude (default)
EIGENAI_ENABLED=false

# dTERMinal API base URL (default: https://determinal-api.eigenarcade.com)
EIGENAI_API_URL=https://determinal-api.eigenarcade.com

# Model ID to use for inference (default: qwen3-32b-128k-bf16)
# NOTE: gpt-oss-120b-f16 also available. It may prefer tool calls over text responses
EIGENAI_MODEL_ID=qwen3-32b-128k-bf16

# Grant wallet private key (REQUIRED when EIGENAI_ENABLED=true)
# IMPORTANT: This should be a SEPARATE wallet from AGENT_PRIVATE_KEY
# This wallet is used ONLY for authenticating with dTERMinal API
# It needs an active grant (allocation of inference tokens) from EigenAI
# Format: 0x-prefixed 64-character hex string
# Get a grant at: https://eigenai.xyz (or contact EigenAI team)
EIGENAI_GRANT_PRIVATE_KEY=

# -----------------------------
# OPTIONAL - Recall API Integration
# -----------------------------

# Enable Recall API integration for signature submission (default: false)
# When true, verified signatures are submitted to Recall for competition tracking
# When false, signatures are only verified locally and stored in database
RECALL_ENABLED=false

# Recall API base URL (REQUIRED when RECALL_ENABLED=true)
# Example: https://api.recall.xyz
RECALL_API_URL=

# Recall API key for authentication (REQUIRED for wallet verification)
# Used for the recall-verify command to prove wallet ownership
# Also used for signature submission when RECALL_ENABLED=true
RECALL_API_KEY=

# Your agent's unique identifier in Recall (REQUIRED when RECALL_ENABLED=true)
RECALL_AGENT_ID=

# Competition ID for EigenAI verification (REQUIRED when RECALL_ENABLED=true)
# This is the competition you're participating in that requires EigenAI verification
RECALL_COMPETITION_ID=

# Signature submission batch size (default: 10)
# Number of signatures to batch in a single submission to Recall API
RECALL_SUBMISSION_BATCH_SIZE=10

# Submission interval in milliseconds (default: 300000 = 5 minutes)
# How often to submit batched signatures to Recall API
RECALL_SUBMISSION_INTERVAL_MS=300000

# Maximum retry attempts for failed submissions (default: 3)
RECALL_MAX_RETRIES=3

# -----------------------------
# OPTIONAL - Trading Execution
# -----------------------------

# Safety mode - blocks all real trades when true (RECOMMENDED)
# Set to false only when you're ready to execute real trades
DRY_RUN=true

# Private key for the trading wallet (with 0x prefix)
# WARNING: This wallet will execute real trades!
# Without this, the agent runs in read-only mode
AGENT_PRIVATE_KEY=

# Base chain RPC URL
# Default: https://mainnet.base.org (public, heavily rate-limited)
#
# RECOMMENDED: Use Alchemy for reliable RPC access
# 1. Create account at https://dashboard.alchemy.com
# 2. Create new app â†’ Select "Base" chain, "Mainnet" network
# 3. Copy your API key
# 4. Set: BASE_RPC_URL=https://base-mainnet.g.alchemy.com/v2/YOUR_API_KEY
#
BASE_RPC_URL=

# -----------------------------
# OPTIONAL - Enhanced Data
# -----------------------------

# Grok API key for X/Twitter sentiment analysis
# Get one at: https://console.x.ai/
# Without this, sentiment tool will be disabled
GROK_API_KEY=

# -----------------------------
# APPLICATION SETTINGS
# -----------------------------

# Environment: development | production
NODE_ENV=development

# Trading loop interval in minutes (default: 5)
TRADING_INTERVAL_MINUTES=5

# Maximum steps per agent iteration (default: 10)
MAX_AGENT_STEPS=10

# CoinGecko API key for technical analysis
# Provide EITHER a Pro API key OR a Demo API key (not both needed)
# Pro API keys: https://www.coingecko.com/en/api/pricing (paid)
# Demo API keys: https://www.coingecko.com/en/api/pricing (free tier)
# If both are set, Pro API key takes precedence
COINGECKO_PRO_API_KEY=
COINGECKO_DEMO_API_KEY=

# -----------------------------
# OPTIONAL - Observability
# -----------------------------

# Langfuse API keys for tracing and observability
# Get your keys at: https://cloud.langfuse.com
# Without these, agent tracing will be disabled
LANGFUSE_SECRET_KEY=
LANGFUSE_PUBLIC_KEY=
LANGFUSE_BASE_URL=https://cloud.langfuse.com
